{% import "/_macros" as macros %}
{% set section = 'products' %}
{% extends "_layouts/main" %}
{% block content %}
    {% include '_partials/hero' with {
        headline: entry.headline,
        subheadline: entry.subheadline
    } %}

    <div class="resouproductsproductsrces container">
        <div class="card-deck">
            {% for product in craft.entries.section('products').all() %}
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">
                            {% if product.type == 'resourceLink' %}
                                <a href="#">{{ product.title }}</a>
                            {% else %}
                                {{ product.title }}
                            {% endif %}
                        </h4>
                        <div class="card-text">
                            This is a product descriptions
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        FOOTER

                        <small class="text-muted">DATE?</small>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
