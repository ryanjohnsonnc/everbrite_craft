{% import "/_macros" as macros %}
{% set section = 'about' %}
{% extends "_layouts/main" %}
{% block content %}
  {% if entry.heroBackground is defined and entry.heroBackground|length > 0 %}
    {% set heroBackground = entry.heroBackground.one.url %}
  {% else %}
    {% set heroBackground = '' %}
  {% endif %}
  {% include '_partials/hero' with {
    headline: entry.headline,
    subheadline: entry.subheadline,
    background: heroBackground
  } %}

  <section class="contact margin--vertical">
    <div class="container">
      <div class="row">
        <div class="contact_form col-md-6 pad--small background-lightGray">
          <div class="container">
            <form method="post" action="" accept-charset="UTF-8">
              {{ csrfInput() }}
              <input type="hidden" name="action" value="contact-form/send">
              <div class="row">
                <div class="col-md-6 form-group">
                    <label for="from-name">Your Name</label>
                    <input type="text" class="form-control" id="from-name" placeholder="Your Name">
                </div>
                <div class="col-md-6 form-group">
                    <label for="from-email">Your Email</label>
                    <input type="email" class="form-control" id="from-email" placeholder="name@example.com">
                </div>
              </div>
              <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" class="form-control" id="subject" placeholder="Subject">
              </div>
              <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" id="message" rows="10"></textarea>
              </div>

              <button class="btn btn-primary" type="submit">Submit</button>
            </form>
          </div>
        </div>
        <div class="offset--top contact_content col-md-6 pad--half text-white background-orange">
          {{ entry.contactContent }}
        </div>
      </div>
    </div>
  </section>

  {{ macros.renderAllBlocks(entry.designedContent) }}
{% endblock %}
